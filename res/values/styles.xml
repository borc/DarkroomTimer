<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="DarkroomTheme" parent="@android:style/Theme.Black">
	</style>

	<style name="DarkroomTheme.RedLight" parent="@android:style/Theme.Black">
		<item name="android:textSize">36sp</item>
		<item name="android:textColor">#F00</item>
	</style>

	<style name="timer">
		<item name="android:textSize">125dip</item>
		<item name="android:textColor">#ff0000</item>
	</style>

	<style name="timer.black">
		<item name="android:textSize">125dip</item>
		<item name="android:textColor">#000000</item>
		<item name="android:background">#200</item>
	</style>

	<style name="timePicker" parent="timer">
		<item name="android:textSize">48sp</item>
		<item name="android:textColor">#666666</item>
	</style>
	
	<style name="upcomingText">
		<item name="android:textSize">25dip</item>
		<item name="android:textColor">#aaaaaa</item>
		<item name="android:typeface">serif</item>
	</style>
	
	<style name="stepText">
		<item name="android:textSize">36dip</item>
		<item name="android:textColor">#fff</item>
		<item name="android:textStyle">bold</item>
		<item name="android:typeface">sans</item>
	</style>

	<style name="actionText">
		<item name="android:textSize">36dip</item>
		<item name="android:textColor">#ccc</item>
		<item name="android:typeface">sans</item>
	</style>

	<style name="startButton">
		<item name="android:textSize">30dip</item>
		<item name="android:textColor">#000</item>
		<item name="android:textStyle">bold</item>
		<item name="android:background">@android:drawable/btn_default</item>
	</style>
	
	<style name="DarkroomTheme.StepEditor" parent="@android:style/TextAppearance.Medium">
		<item name="android:textSize">16sp</item>
		<item name="android:paddingBottom">16sp</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
		<item name="android:background">@android:drawable/list_selector_background</item>
		<item name="android:textColor">@color/bright_text_dark_focused</item>
	</style>
</resources>